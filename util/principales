    <script>
        // JavaScript function to validate form fields
        function validateForm() {
            var name = document.getElementById("name").value;
            if (name == "") {
                alert("Name must be filled out");
                return false;
            }
            // Additional validations for other fields can be added here
            return true;
        }
    </script>

